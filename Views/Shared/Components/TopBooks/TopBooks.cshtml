@using BookStroe.Models
@using BookStroe.Components
@model IEnumerable<BookModel>


<div class="container" style="background-color:whitesmoke">
    <h1 class="text-center" style="background-color:aquamarine"> Top Books</h1>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4" style="background-color:orangered">
                <div class="card mb-4 shadow-sm" style="background-color:yellow">
                    <img src="@book.PhotoURL" class="img-thumbnail" />
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-action="GetBookById" asp-route-Id="@book.Id" class="btn btn-outline-secondary">View details</a>
                            </div>
                            <small class="text-dark">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>